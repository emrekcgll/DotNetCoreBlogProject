@model IEnumerable<EntityLayer.Entities.Category>

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["ActivePage"] = "CategoryList";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <table class="table">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryStatus)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryStatus)
                    </td>
                    <td>
                        <a href="" class="btn btn-outline-danger">Sil</a>
                        <a href="" class="btn btn-outline-info">Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
