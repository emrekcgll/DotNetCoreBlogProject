@using EntityLayer.Entities
@model List<AppUser>
@{
    ViewData["Title"] = "LockedUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["ActivePage"] = "LockedUser";
}

@if (ViewBag.Message != null)
{
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <h3 class="text-success">
                @ViewBag.Message
            </h3>
        </div>
    </div>
}
else
{
    <div class="container-xxl flex-grow-1 container-p-y">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name Surname
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Locked End
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name @item.Surname
                        </td>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.LockoutEnd
                        </td>
                        <th><a href="/Admin/Dashboard/MakeActive/@item.Id" class="btn btn-outline-info">Make Active</a></th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}