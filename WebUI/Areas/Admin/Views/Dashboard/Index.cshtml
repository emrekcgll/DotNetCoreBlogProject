@using EntityLayer.Entities
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["ActivePage"] = "Dashboard";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-6 mb-4 order-0">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-7">
                        <div class="card-body">
                            <h5 class="card-title text-primary">
                                Hoşgeldiniz @ViewBag.Name (@foreach (var role in ViewBag.Role)
                                {
                                    @role
                                }) 🎉
                            </h5>
                            <p class="mb-4">
                                Lorem ipsum dolar sit amet..
                            </p>
                        </div>
                    </div>
                    <div class="col-sm-5 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="~/sneat-1.0.0/assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User"
                                 data-app-dark-img="illustrations/man-with-laptop-dark.png"
                                 data-app-light-img="illustrations/man-with-laptop-light.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-12 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <div class="avatar flex-shrink-0">
                            <img src="~/sneat-1.0.0/assets/img/icons/unicons/cc-success.png" class="rounded" />
                        </div>
                    </div>
                    <span class="fw-semibold d-block mb-1">Toplam Blog Sayısı</span>
                    <h3 class="card-title mb-2">@ViewBag.AllBlogCount</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-12 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <div class="avatar flex-shrink-0">
                            <img src="~/sneat-1.0.0/assets/img/icons/unicons/cc-success.png" class="rounded" />
                        </div>
                    </div>
                    <span class="fw-semibold d-block mb-1">Yayında Olan Blog Sayısı</span>
                    <h3 class="card-title mb-2">@ViewBag.BlogCount</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-12 mb-4 order-1">
            <div class="row">
                <div class="col-lg-3 col-md-12 col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div id="chart-new-blog"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-12 col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div id="chart-new-blog2"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-12 col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="avatar flex-shrink-0">
                                    <img src="~/sneat-1.0.0/assets/img/icons/unicons/cc-success.png" class="rounded" />
                                </div>
                            </div>
                            <span class="fw-semibold d-block mb-1">Yayında Olan Blog Sayısı</span>
                            <h3 class="card-title mb-2">@ViewBag.BlogCount</h3>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-12 col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="avatar flex-shrink-0">
                                    <img src="~/sneat-1.0.0/assets/img/icons/unicons/cc-success.png" class="rounded" />
                                </div>
                            </div>
                            <span class="fw-semibold d-block mb-1">Yayında Olan Blog Sayısı</span>
                            <h3 class="card-title mb-2">@ViewBag.BlogCount</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-lg-6 mb-4 order-2">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="card-title m-0 me-2">Onay Bekleyen Blog Listesi</h5>
                    </div>
                    <div class="card-body">
                        <ul class="p-0 m-0">
                            @foreach (var item in Model)
                            {
                                <li class="d-flex mb-4 pb-1">
                                    <div class="avatar flex-shrink-0 me-3">
                                        <img src="~/images/@item.BlogImage" alt="User" class="rounded" />
                                    </div>
                                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                        <div class="me-2">
                                            <small class="text-muted d-block mb-1">@item.AppUser.Name @item.AppUser.Surname</small>
                                            <h6 class="mb-0"><a href="/Admin/Dashboard/UpdateBlog/@item.BlogID/">@item.BlogTitle</a></h6>
                                        </div>
                                        <div class="user-progress d-flex align-items-center gap-1">
                                            <h6 class="mb-0">@item.Category.CategoryName</h6>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4 order-2">
                <div class="card h-100">
                    <div id="chart"></div>
                </div>
            </div>
        }
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

<script>
    var options = {
        series: [@ViewBag.Oran],
        chart: {
            type: 'radialBar',
            offsetY: -20,
            height: 250,
            sparkline: {
                enabled: true
            }
        },
        plotOptions: {
            radialBar: {
                startAngle: -92,
                endAngle: 92,
                track: {
                    background: "#e7e7e7",
                    strokeWidth: '97%',
                    margin: 5
                },
                dataLabels: {
                    name: {
                        show: true,
                        fontSize: '14px'
                    },
                    value: {
                        offsetY: -40,
                        fontSize: '18px'
                    }
                }
            }
        },
        grid: {
            padding: {
                top: -10
            }
        },
        labels: ['Blog Artış Oranı'],
    };

    var chart = new ApexCharts(document.querySelector("#chart-new-blog"), options);
    chart.render();



    var options = {
        series: [@ViewBag.CommentOran],
        chart: {
            type: 'radialBar',
            offsetY: -20,
            height: 250,
            sparkline: {
                enabled: true
            }
        },
        plotOptions: {
            radialBar: {
                startAngle: -92,
                endAngle: 92,
                track: {
                    background: "#e7e7e7",
                    strokeWidth: '97%',
                    margin: 5
                },
                dataLabels: {
                    name: {
                        show: true,
                        fontSize: '14px'
                    },
                    value: {
                        offsetY: -40,
                        fontSize: '18px'
                    }
                }
            }
        },
        grid: {
            padding: {
                top: -10
            }
        },
        labels: ['Yorum Artış Oranı'],
    };

    var chart = new ApexCharts(document.querySelector("#chart-new-blog2"), options);
    chart.render();
</script>

<script>
    var options = {
        series: [@ViewBag.BlogCount, @ViewBag.AllBlogCount, @ViewBag.PendingBlogCount],
        chart: {
            type: 'donut',
        },
        labels: ['Yayınlanan Blog', 'Toplam Blog', 'Onay Bekleyen Blog'],
        responsive: [{
            breakpoint: 480,
            options: {
                chart: {
                    width: 200
                },
                legend: {
                    position: 'bottom'
                }
            }
        }]
    };

    var chart = new ApexCharts(document.querySelector("#chart"), options);
    chart.render();
</script>
